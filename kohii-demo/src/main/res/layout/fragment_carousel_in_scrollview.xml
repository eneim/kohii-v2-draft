<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <androidx.core.widget.NestedScrollView
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"
        >

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/first_carousel_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/colorPrimaryDark"
          android:theme="@style/Theme.MaterialComponents"
          >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/first_carousel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="This carousel can be scrolled vertically"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/first_carousel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_carousel_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="16:9"
            android:orientation="vertical"
            />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/second_carousel_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/colorPrimaryDark"
          android:theme="@style/Theme.MaterialComponents"
          >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/second_carousel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="This carousel can be scrolled horizontally"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/second_carousel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/second_carousel_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="16:9"
            android:orientation="horizontal"
            />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />

      <com.google.android.material.textview.MaterialTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/long_text"
          android:maxLines="8"
          android:layout_margin="8dp"
          />
    </LinearLayout>

  </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
